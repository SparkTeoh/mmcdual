---
import Base from "@/layouts/Base.astro";
import { getEntryCTM } from "@/lib/contentParser.astro";
import handleDraftPage from "@/lib/utils/handleDraftPage";
import { generatePaths } from "@/lib/utils/i18nUtils.ts";

import TrainingHero from "@/components/sections/TrainingHero.astro";
import TrainingMethodology from "@/components/sections/TrainingMethodology.astro";
import FaqSection from "@/components/sections/FaqSection.astro";
import AboutUs from "@/components/sections/AboutUs.astro";
import TrainingHRDF from "@/components/sections/TrainingHRDF.astro";
import CallToAction from "@/components/sections/CallToAction.astro";

export function getStaticPaths() {
  return generatePaths();
}

const entry = await getEntryCTM("training", "financial-model", Astro.currentLocale);

// Remove drafts pages in production
const response = handleDraftPage(entry?.data);
if (response) return response;

// Load the hero section content
const heroContent = await getEntryCTM("sections", "training-financial-model-hero", Astro.currentLocale);

// Load the Why MMC section content
const whyMMCContent = await getEntryCTM("sections", "training-financial-model-why-mmc", Astro.currentLocale);

// Load the curriculum section content
const curriculumContent = await getEntryCTM("sections", "training-financial-model-curriculum", Astro.currentLocale);

// Load the outcomes section content
const outcomesContent = await getEntryCTM("sections", "training-financial-model-outcomes", Astro.currentLocale);
---

<Base
  {...entry?.data}
  structuredData={{
    pageType: "WebPage",
  }}>
  <TrainingHero content={heroContent?.data} />
  <TrainingMethodology content={whyMMCContent?.data} />
  <FaqSection content={curriculumContent?.data} />
  <AboutUs content={outcomesContent?.data} />
  <TrainingHRDF />
  <CallToAction />
</Base>

