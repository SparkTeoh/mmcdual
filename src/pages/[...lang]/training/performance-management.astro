---
import Base from "@/layouts/Base.astro";
import { getEntryCTM } from "@/lib/contentParser.astro";
import handleDraftPage from "@/lib/utils/handleDraftPage";
import { generatePaths } from "@/lib/utils/i18nUtils.ts";

import TrainingHero from "@/components/sections/TrainingHero.astro";
import TrainingCorePillars from "@/components/sections/TrainingCorePillars.astro";
import TrainingMethodology from "@/components/sections/TrainingMethodology.astro";
import TrainingTargetAudience from "@/components/sections/TrainingTargetAudience.astro";
import TrainingHRDF from "@/components/sections/TrainingHRDF.astro";
import CallToAction from "@/components/sections/CallToAction.astro";

export function getStaticPaths() {
  return generatePaths();
}

const entry = await getEntryCTM("training", "performance-management", Astro.currentLocale);

// Remove drafts pages in production
const response = handleDraftPage(entry?.data);
if (response) return response;

// Load the hero section content specific to Performance Management
const heroContent = await getEntryCTM(
  "sections",
  "training-performance-management-hero",
  Astro.currentLocale,
);
---

<Base
  {...entry?.data}
  structuredData={{
    pageType: "WebPage",
  }}>
  <TrainingHero content={heroContent?.data} />
  <TrainingCorePillars />
  <TrainingMethodology />
  <TrainingTargetAudience />
  <TrainingHRDF />
  <CallToAction />
</Base>

