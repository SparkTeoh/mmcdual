---
import Base from "@/layouts/Base.astro";
import { getEntryCTM } from "@/lib/contentParser.astro";
import handleDraftPage from "@/lib/utils/handleDraftPage";
import AboutIntro from "@/components/sections/AboutIntro.astro";
import AboutBanner from "@/components/sections/AboutBanner.astro";
import Achievements from "@/components/sections/Achievements.astro";
import OurTeam from "@/components/sections/OurTeam.astro";
import CallToAction from "@/components/sections/CallToAction.astro";
import { generatePaths } from "@/lib/utils/i18nUtils.ts";
import { buildAboutPageSchema } from "@/lib/utils/schema";
import AboutLicense from "@/components/sections/AboutLicense.astro";

export function getStaticPaths() {
  return generatePaths();
}

const entry = await getEntryCTM("about", "-index", Astro.currentLocale);

// Remove drafts pages in production
const response = handleDraftPage(entry?.data);
if (response) return response;

const siteUrl = Astro.site?.href ?? new URL("/", Astro.url).href;
const aboutSchema = buildAboutPageSchema({
  locale: Astro.currentLocale,
  siteUrl,
  url: Astro.url.href,
  title: entry?.data?.title,
  description: entry?.data?.metaDescription || entry?.data?.description,
});
---

<Base
  {...entry?.data}
  structuredData={{
    pageType: "AboutPage",
    schemaNodes: [aboutSchema],
  }}>
  <Achievements />
  <AboutLicense />
  <OurTeam content={entry?.data.leadershipTeam} />
  <OurTeam content={entry?.data.ourTeam} />
  <CallToAction />
</Base>
