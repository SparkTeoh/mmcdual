---
import { markdownify } from "@/lib/utils/textConverter";
import OptimizedImage from "../utilities/OptimizedImage.astro";
import Icons from "@/helpers/Icons.astro";

interface Props {
  replaceCategories?: string[];
  removeCategories?: boolean;
  hasBlob?: boolean;
  content?: {
    icon: string;
    label: string;
    value: string;
  }[];
  class?: string;
}

let {
  content: list,
  hasBlob = true,
  removeCategories,
  replaceCategories,
  class: className = "",
  ...rest
} = Astro.props;

// Remove categories from list if removeCategories is true
if (removeCategories) {
  list = list?.filter((item: any) => !item.value.includes("categories"));
}

// Replace categories in list if replaceCategories is provided
if (replaceCategories) {
  list = list?.map((item: any) => {
    if (typeof item.value === "object" || item.value.includes("categories")) {
      item.value = `${replaceCategories.join(" ")}`;
    }
    return item;
  });
}

if (!list) return;
---

<div
  class:list={[
    className
      ? className
      : "grid gap-x-8 gap-y-4 md:grid-cols-2 lg:grid-cols-1 xl:grid-cols-2",
  ]}
  {...rest}>
  {
    list.map((item: any) => (
      <div class="flex flex-wrap items-start gap-x-1 gap-y-2">
        <div class="flex items-start gap-4">
          {item.icon && (
            <div class="relative">
              {hasBlob && (
                <OptimizedImage
                  inlineSvg={true}
                  alt="Decorative blob shape icon for MMC Financial Planning portfolio information"
                  class="has-inherited-colors text-primary/50 h-8 w-8"
                  src="/images/icons/svg/portfolio/blob.svg"
                />
              )}

              <Icons
                icon={item.icon}
                class:list={[
                  "text-dark h-6 w-6",
                  {
                    "absolute -right-1 bottom-2": hasBlob,
                  },
                ]}
              />
            </div>
          )}
          <div class="flex flex-wrap items-center gap-4 gap-y-2">
            {item.label && (
              <span class="text-dark font-medium" set:html={item.label} />
            )}
            <div
              class="prose-a:underline"
              set:html={markdownify(item.value, true)}
            />
          </div>
        </div>
      </div>
    ))
  }
</div>
