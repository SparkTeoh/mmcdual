---
import { getEntryCTM } from "@/lib/contentParser.astro";
import { markdownify } from "@/lib/utils/textConverter";

let { introduction, methodology } = (
  await getEntryCTM("sections", "training-intro", Astro.currentLocale)
)?.data;
---

<section class="section">
  <div class="container">
    <!-- Introduction -->
    <div class="row justify-center text-center">
      <div class="lg:col-10">
        <h2 class="mb-6 text-h3 lg:text-h2" set:html={markdownify(introduction.title)} />
        <div class="content opacity-80" set:html={markdownify(introduction.description)} />
      </div>
    </div>

    <!-- Methodology -->
    <div class="row mt-16 justify-center lg:mt-24">
      <div class="text-center lg:col-10">
        <div class="mb-12">
          <h2 class="mb-4 text-h3" set:html={markdownify(methodology.title)} />
          <p class="opacity-80" set:html={markdownify(methodology.description)} />
        </div>
        
        <div class="grid gap-8 md:grid-cols-3">
          {methodology.steps.map((step: any, index: number) => (
            <div class="rounded-xl bg-white p-6 shadow-sm border border-border/50 transition duration-300 hover:shadow-md dark:bg-darkmode-theme-light dark:border-darkmode-border">
              <div class="mb-4 text-6xl font-bold text-primary/10 select-none">{index + 1}</div>
              <h3 class="mb-3 text-xl font-bold" set:html={markdownify(step.title)} />
              <p class="opacity-80" set:html={markdownify(step.description)} />
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>
